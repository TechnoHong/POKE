<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:background="@color/material_on_primary_emphasis_medium"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Backbtn"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="?attr/actionModeCloseDrawable"
            app:srcCompat="@drawable/abc_vector_test" />

        <ImageView
            android:id="@+id/Profileimage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/Nickname"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:gravity="center"
            android:text="Michael Adams"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Food Specialist" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/historyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가한 요리" />

            <Button
                android:id="@+id/dibsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찜한요리" />

            <Button
                android:id="@+id/allergyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기피 재료" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/historyCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dibsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allergyCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical" />

</LinearLayout>