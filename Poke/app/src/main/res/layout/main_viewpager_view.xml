<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/main_circle_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dh" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/main_pager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS TITLE"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#7100FF7F"/>

        <TextView
            android:id="@+id/main_pager_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_pager_title"
            android:text="THIS IS TIME"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="italic"
            android:background="#7100FF7F"/>

        <TextView
            android:id="@+id/main_pager_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS RATE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#7100FF7F"/>
    </RelativeLayout>

</FrameLayout>