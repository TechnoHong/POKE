<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="< 이전"
                    android:textColor="@android:color/darker_gray" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="235dp"
                    android:backgroundTint="@color/white"
                    android:text="다음 >"
                    android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="못 먹는 식재료가 있나요?"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="알레르기 등 싫어하는 식재료가 있나요?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text=" 선택한 식재료를 포함하는 레시피는 제외하고 추천해 드릴게요."
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="481dp"
            android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/allergyOption"
                    android:layout_width="match_parent"
                    android:layout_height="479dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip1"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="새우" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip2"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="굴" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip3"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="게" />


                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip4"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="홍합" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip5"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오징어" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip6"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전복" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip7"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="고등어" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip8"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조개" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip9"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="메밀" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip10"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="밀" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip11"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대두" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip12"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="호두" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip13"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="땅콩" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip14"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="난류" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip15"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="우유" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip16"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="쇠고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip17"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="돼지고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip18"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닭고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip19"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복숭아" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip20"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="토마토" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip21"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="잣" />


                </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
</LinearLayout>