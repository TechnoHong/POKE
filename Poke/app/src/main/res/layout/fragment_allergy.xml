<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_home">

        <LinearLayout
            android:id="@+id/bottomSheet3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:behavior_peekHeight="399dp"
            app:layout_behavior="@string/bottom_sheet_behavior"
            android:background="@drawable/layout_radius">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="&lt; 이전"
                            android:textColor="@android:color/darker_gray"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="-1dp"
                            android:backgroundTint="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="다음 &gt;"
                            android:textColor="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="못 먹는 식재료가 있나요?"
                    android:textColor="@color/black"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="알레르기 등 싫어하는 식재료가 있나요?\n 선택한 식재료를 포함하는 레시피는\n 제외하고 추천해 드릴게요."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#FFFFFF" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/allergyOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip1"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="새우" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip2"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="굴" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip3"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="게" />


                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip4"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="홍합" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip5"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오징어" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip6"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전복" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip7"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="고등어" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip8"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조개" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip9"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="메밀" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip10"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="밀" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip11"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대두" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip12"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="호두" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip13"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="땅콩" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip14"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="난류" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip15"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="우유" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip16"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="쇠고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip17"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="돼지고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip18"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닭고기" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip19"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복숭아" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip20"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="토마토" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/allergyChip21"
                            style="@style/CustomChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="잣" />


                </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>