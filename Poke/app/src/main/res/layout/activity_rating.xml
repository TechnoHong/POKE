<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#C6C2C2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:iconifiedByDefault="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dassn_sub_tv"
        android:layout_marginVertical="10dp">

    </androidx.appcompat.widget.SearchView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dassn_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/dassn_ingre_item"
            android:overScrollMode="never"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:divider="#FF999999"
            android:dividerHeight="1dp" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneButton2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#B3ACAC"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RatingBar
        android:id="@+id/ratingBar2"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/CustomRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_subtitle_tv"
        tools:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="30dp"/>

    <TextView
        android:id="@+id/ratingtitletv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레시피를 평가하세요."
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rating_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평가 결과는 더욱 나은 레시피를 제공합니다."
        app:layout_constraintTop_toBottomOf="@id/ratingtitletv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dassn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거덜난 재료를 선택하세요."
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar2" />

    <TextView
        android:id="@+id/dassn_sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 외에 삭제할 재료는 냉장고에서 검색해보세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dassn_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>