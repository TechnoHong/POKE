<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Poke" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#25C575</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">#25C575</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1D9A5B</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#FFFFFF</item> <!--홈/뒤로가기 버튼의 색상-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item> <!--액션 메뉴의 텍스트 색상-->
        <!--custom font-family 적용-->
        <item name="fontFamily">@font/pretendard_b</item>

    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="CustomTabStyle" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_selector</item>
    </style>

    <style name="RatingChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="SearchViewStyle" parent="">
        <item name="android:textColorHint">#000000</item>
        <item name="searchHintIcon">@drawable/ic_search_black_24dp</item>
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="closeIcon">@drawable/ic_search_black_24dp</item>
        <item name="android:searchHintIcon">@drawable/ic_search_black_24dp</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="strokeGray">
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_gray</item>
    </style>

    <style name="rcpToolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/loading_image</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/emptystar</item>
        <item name="colorControlActivated">@color/filledstar</item>
    </style>
</resources>