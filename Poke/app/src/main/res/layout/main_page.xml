<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </androidx.viewpager2.widget.ViewPager2>

        <TextView
            android:id="@+id/tv_foryou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원님을 위한 맞춤레시피"
            android:textColor="#476E4C"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sfl">
            <include layout="@layout/shimmer_item"></include>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recylerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            tools:listitem="@layout/main_item">

        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            >

            <ImageView
                android:id="@+id/more_rcp_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#70000000"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더 보기"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_donow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지금 할 수 있는 레시피"
            android:textStyle="bold"
            android:layout_marginStart="3dp"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="#476E4C"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recylerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            tools:listitem="@layout/main_item">

        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            >

            <ImageView
                android:id="@+id/more_rcp_thumbnail2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#70000000"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더 보기"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>