<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_radius"
    android:elevation="20dp"
    android:foregroundTint="#FFFFFF"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/barcodeButton"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginLeft="180dp"
            app:srcCompat="@drawable/ic_qr_code_scanner_black_24dp" />

        <EditText
            android:id="@+id/prod_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="제품명"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/prod_cat_txt"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="종류"
                android:textColor="#000"
                tools:ignore="Deprecated" />

            <Spinner
                android:id="@+id/ingre_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#000000"
                android:foregroundTint="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/daycnt_txt"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="유통기한"
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                app:srcCompat="@drawable/ic_baseline_calendar_today_24" />
        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogOkBtn"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/btn_shape"
            android:text="추가"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogCancelBtn"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/cancel_shape"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--// 닫기 버튼 -->
</LinearLayout>